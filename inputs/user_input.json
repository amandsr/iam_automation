{
  "role_name": "CC_s3_bkt_encryption",
  "policy_name": "s3ReadPutBucketEncryption",
  "assume_role_policy": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "Service": "s3.amazonaws.com"
        },
        "Action": "sts:AssumeRole"
      }
    ]
  },
  "statements": [
    {
      "effect": "Allow",
      "actions": [
        "s3:GetObject",
        "s3:PutObject"
      ],
      "resources": [
        "arn:aws:s3:::my_bkt",
        "arn:aws:s3:::my_bkt/*"
      ]
    },
    {
      "effect": "Allow",
      "actions": [
        "dynamodb:PutItem",
        "dynamodb:GetItem"
      ],
      "resources": [
        "arn:aws:dynamodb:us-west-2:123456789012:table/my_table"
      ]
    },
    {
      "effect": "Allow",
      "actions": [
        "eks:DescribeCluster"
      ],
      "resources": [
        "arn:aws:eks:us-west-2:123456789012:cluster/my-cluster"
      ]
    },
    {
      "effect": "Allow",
      "actions": [
        "ec2:StopInstances",
        "ec2:RebootInstances"
      ],
      "resources": [
        "\"*\""
      ],
      "condition": {
        "Null": {
          "aws": "RequestTag/owner: true"
        }
      }
    },
    {
      "effect": "Allow",
      "actions": [
        "lambda:Invoke"
      ],
      "resources": [
        "\"*\""
      ]
    }
  ]
}